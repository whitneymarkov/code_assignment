{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "lib": [
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ESNext",
            "DOM"
        ],
        "outDir": "dist",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": false,
        "baseUrl": "./",
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "paths": {
            "src/*": ["src/*"]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
}
